@model IEnumerable<DestekTaleplerim.MvcWebUI.Entity.DestekTalebi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="pt-5">Talep Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Yeni Talep", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TalepNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IslemYapan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Konu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oncelik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Durum)
        </th>


        <th></th>
    </tr>

    @{ foreach (var item in Model)
        {

            


                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.TalepNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IslemYapan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Konu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oncelik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Durum)
                    </td>


                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            
        }
    }

</table>
